<div id="profile_container">
  <div id="character_container">

    <div id="character_name">
      <%= @character.name %>
    </div>

    <div class="equipment" , id="equipment_left">
      <br>
      <%= image_tag "helmet.png" , class: "item" %>
      <br>
      <%= image_tag "armor.png" , class: "item" %>
      <br>
      <%= image_tag "legs" , class: "item" %>
      <br>
      <%= image_tag "boots.png" , class: "item" %>
    </div>

    <div id="avatar_image">
      <% if @character.character_class=='warrior' %>
        <%= image_tag "warrior_full.png" , class: "avatar_image" %>
      <%elsif @character.character_class=='hunter' %>
        <%= image_tag "hunter_full.png" , class: "avatar_image" %>
      <% else %>
        <%= image_tag "mage_full.png" , class: "avatar_image" %>
      <% end %>
    </div>

    <div class="equipment" , id="equipment_right">
      <br>
      <%= image_tag "sword.png" , class: "item" %>
      <br>
      <%= image_tag "shield.png" , class: "item" %>
      <br>
      <%= image_tag "ring1.png" , class: "item" %>
      <br>
      <%= image_tag "ring2.png" , class: "item" %>
    </div>

    <div id="character_healthbar">
      <div id="myBar" class="hpbar" style="width:25%">
        <div class="hpbarcenter">25%</div>
      </div>
    </div>
  </div>


  <%= form_with model: @statistic do |form| %>
    <div id="stats_container">

      <div class="d3v1">
        <div class="stats_table">
          <div> STR </div>          
          <div> DEX </div>
          <div> STM </div>
          <div> INI </div>
        </div>
      </div>

      <div class="d3v2">
        <div class="stats_table">
          <div>
            <%= @statistic.strength + @statistic.added_strength %>
          </div>
          <div>
            <%= @statistic.dexterity + @statistic.added_dexterity %>
          </div>
          <div>
            <%= @statistic.stamina + @statistic.added_stamina %>
          </div>
          <div>
            <%= @statistic.initiative + @statistic.added_initiative %>
          </div>
        </div>
      </div>


      <div class="d3v2_1">
        <div class="stats_table">
          <div>
            <%= form.text_field :added_strength, value: @statistic.added_strength %>
          </div>
          <div>
            <%= form.text_field :added_dexterity, value: @statistic.added_dexterity %>
          </div>
          <div>
            <%= form.text_field :added_stamina, value: @statistic.added_stamina %>
          </div>
          <div>
            <%= form.text_field :added_initiative, value: @statistic.added_initiative %>
          </div>
        </div>
      </div>

      <div class="d3v3">
        <div class="stats_table">
          <div>
              <%= image_tag "plusik.png" , class: "ui" %>
          </div>
          <div>
              <%= image_tag "plusik.png" , class: "ui" %>
          </div>
          <div>
              <%= image_tag "plusik.png" , class: "ui" %>
          </div>
          <div>
              <%= image_tag "plusik.png" , class: "ui" %>
          </div>
        </div>
      </div>

      <div class="d3v4">
        <div class="stats_table">
          <div>
            31
          </div>
          <div>
            <%= form.submit %>
          </div>
        </div>
      </div>


      <div class="bag">
        ale eq wypasione
      </div>

    </div>
    <% end %>

</div>

